@model Tourism.Order

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Замовлення @Model.OrderId</title>
</head>
<body>

<div class="card">
    <div class="card-header">
        <h4>Деталі замовлення №@Model.OrderId</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.UserName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TourId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tour.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GuideId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Guide.UserName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Status)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Delete" asp-route-id="@Model.OrderId" class="btn btn-danger me-2">
            <i class="bi bi-trash"></i>
        </a>
        <a asp-action="Edit" asp-route-id="@Model.OrderId" class="btn btn-warning me-2">
            <i class="bi bi-pencil-square"></i>
        </a>
    </div>
</div>
</body>
</html>
