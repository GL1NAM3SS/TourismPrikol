@model Tourism.Category

@{
    IEnumerable<Tourism.Tour> Tours  = ViewData["Tours"] as IEnumerable<Tourism.Tour>;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Видалити</title>
    <style>
        .image-container {
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .image-container img {
            max-width: 100%;
            max-height: 100%;
            width: 100%;
            height: auto;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <div class="card mb-4">
        <div class="row g-0">
            @if(!string.IsNullOrEmpty(Model.MainPhoto))
            {
                <div class="col-md-4">
                        <div class="image-container">
                            <img src="@Model.MainPhoto" class="img-fluid rounded" alt="@Model.Name">
                        </div>
                </div>
            }
            <div class="col-md">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h2>Ви впевнені, що хочете видалити категорію @Model.Name?</h2>
                        <div class="d-flex">
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="CategoryId" />
                                <input type="submit" value="Видалити" class="btn btn-danger" />
                            </form>
                        </div>
                    </div>
                    
                    @if(!string.IsNullOrEmpty(Model.Info))
                    {
                        <hr />
                        <div>
                            @Html.Raw(Model.Info)
                        </div>
                        <br>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
    


